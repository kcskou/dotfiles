[user]
	email = kouchon@amazon.com
	name = Kelvin Kou
[alias]
        co = checkout
        cob = checkout -b
	br = branch
        cm = !git add -A && git commit -m
        save = !git add -A && git commit -m 'SAVEPOINT'
        undo = reset HEAD~1 --mixed
        amend = commit -a --amend -m
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	pl = log --graph --pretty='%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -12
	alias = config --get-regexp alias
        wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
	editalias = config --global -e
        untrack = rm --cached
	dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%ar%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
[credential]
	helper = cache
[core]
	excludesfile = ~/.gitignore_global
	pager = less -FMRiX
[git]
	trashafterhead = reset --hard HEAD
[color]
	ui = auto
[push]
	default = simple
